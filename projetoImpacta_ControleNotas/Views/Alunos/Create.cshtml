@model projetoImpacta_ControleNotas.Models.AlunoModel

@{
    ViewData["Title"] = "Adicionar um aluno";
}

<h1>@ViewData["Title"]</h1>

<h4>AlunoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nota1" class="control-label"></label>
                <input asp-for="Nota1" class="form-control" />
                <span asp-validation-for="Nota1" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Nota2" class="control-label"></label>
                <input asp-for="Nota2" class="form-control" />
                <span asp-validation-for="Nota2" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Adicionar aluno</button>
            <a class="btn btn-secondary" asp-action="Index" role="button">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
